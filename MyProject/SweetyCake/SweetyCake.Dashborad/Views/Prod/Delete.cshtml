@model OutbornE_commerce.BAL.Dto.Products.ProductDto
@{
    ViewData["Title"] = "Delete Product";
}

@section Styles {
    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .delete-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
        }

        .delete-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: none;
            overflow: hidden;
        }

        .delete-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

            .delete-header h1 {
                margin-bottom: 0.5rem;
                font-weight: 700;
            }

            .delete-header p {
                margin: 0;
                opacity: 0.9;
                font-size: 1.1rem;
            }

        .delete-body {
            padding: 2rem;
        }

        .warning-box {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border: 2px solid #ffc107;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .warning-icon {
            font-size: 3rem;
            color: #f39c12;
            margin-bottom: 1rem;
        }

        .product-info {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .info-row {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #dee2e6;
        }

            .info-row:last-child {
                border-bottom: none;
            }

        .info-label {
            font-weight: 600;
            color: #495057;
            min-width: 150px;
            display: flex;
            align-items: center;
        }

            .info-label i {
                margin-right: 0.5rem;
                color: #6c757d;
                width: 20px;
            }

        .info-value {
            flex: 1;
            color: #212529;
            font-weight: 500;
        }

        .product-image {
            max-width: 80px;
            max-height: 80px;
            border-radius: 8px;
            border: 2px solid #dee2e6;
            object-fit: cover;
        }

        .no-image-placeholder {
            width: 80px;
            height: 80px;
            background: #e9ecef;
            border: 2px dashed #6c757d;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }

        .action-buttons {
            text-align: center;
            padding-top: 1rem;
            border-top: 2px solid #dee2e6;
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
                color: white;
            }

        .btn-cancel {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

            .btn-cancel:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
                color: white;
                text-decoration: none;
            }

        .fade-in {
            animation: fadeInUp 0.6s ease-out;
        }

     
        .delete-header {
            padding: 1.5rem;
        }

        .delete-body {
            padding: 1.5rem;
        }

        .info-row {
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
        }

        .info-label {
            min-width: auto;
            margin-bottom: 0.5rem;
        }

        }
    </style>
}

<div class="container-fluid">
    <div class="delete-container fade-in">
        <div class="delete-card">
            <!-- Header -->
            <div class="delete-header">
                <h1>
                    <i class="fas fa-trash-alt me-2"></i>Delete Product
                </h1>
                <p>Confirm product deletion</p>
            </div>

            <!-- Body -->
            <div class="delete-body">
                <!-- Warning Box -->
                <div class="warning-box">
                    <div class="warning-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h4 class="text-warning mb-2">⚠️ Warning!</h4>
                    <p class="mb-0 text-dark">
                        <strong>Are you sure you want to delete this product?</strong><br>
                        This action cannot be undone and will permanently remove the product from your inventory.
                    </p>
                </div>

                <!-- Product Information -->
                <div class="product-info">
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-info-circle me-2"></i>Product Details
                    </h5>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-font"></i>English Name:
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.NameEn)</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-language"></i>Arabic Name:
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.NameAr)</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-dollar-sign"></i>Price:
                        </div>
                        <div class="info-value">
                            <span class="badge bg-success fs-6 px-3 py-2">
                                $@Model.Price.ToString("N2")
                            </span>
                        </div>
                    </div>

                    @if ( Model.DiscountPrice > 0)
                    {
                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-percent"></i>Discount Price:
                            </div>
                            <div class="info-value">
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    $@Model.DiscountPrice.ToString("N2")
                                </span>
                            </div>
                        </div>
                    }

                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-image"></i>Image:
                        </div>
                        <div class="info-value">
                            @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                            {
                                <img src="@Model.MainImageUrl" alt="Product Image" class="product-image" />
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <form asp-action="Delete" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn-custom btn-delete">
                            <i class="fas fa-trash"></i>Yes, Delete Product
                        </button>
                    </form>
                    <a asp-action="Index" class="btn-custom btn-cancel">
                        <i class="fas fa-times"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add click confirmation for extra safety
            $('form').on('submit', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')) {
                    e.preventDefault();
                    return false;
                }
            });

            // Initialize tooltips if needed
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}