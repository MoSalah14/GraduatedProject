@model OutbornE_commerce.BAL.Dto.Products.ProductForCreateDto

@{
	ViewData["Title"] = "Create";
}

<h1 text-center>Create New Product</h1>
<hr />
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<form asp-action="Create" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label for="NameAr" class="control-label">Arabic Name</label>
					<input asp-for="NameAr" class="form-control" />
					<span asp-validation-for="NameAr" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="NameEn" class="control-label">English Name</label>
					<input asp-for="NameEn" class="form-control" />
					<span asp-validation-for="NameEn" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="AboutEn" class="control-label">About En</label>
					<input asp-for="AboutEn" class="form-control" />
					<span asp-validation-for="AboutEn" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="AboutAr" class="control-label">About Ar</label>
					<input asp-for="AboutAr" class="form-control" />
					<span asp-validation-for="AboutAr" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="MaterialEn" class="control-label">Material En</label>
					<input asp-for="MaterialEn" class="form-control" />
					<span asp-validation-for="MaterialEn" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="MaterialAr" class="control-label">Material Ar</label>
					<input asp-for="MaterialAr" class="form-control" />
					<span asp-validation-for="MaterialAr" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="NumberOfPieceAvailable" class="control-label">NumberOfPieceAvailable</label>
					<input asp-for="NumberOfPieceAvailable" type="number" class="form-control" />
					<span asp-validation-for="NumberOfPieceAvailable" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="Price" class="control-label">Price</label>
					<input asp-for="Price" type="number" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="DiscountPrice" class="control-label">DiscountPrice</label>
					<input asp-for="DiscountPrice" type="number" class="form-control" />
					<span asp-validation-for="DiscountPrice" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CategoryId" class="control-label">Category</label>
					<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryEn"></select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
				
				<br />
				<div class="form-group">
					<label for="MainImagePhoto" class="control-label">Image</label>
					<input type="file" asp-for="MainImagePhoto" class="form-control-file" />
					<span asp-validation-for="MainImagePhoto" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="ProductImages" class="control-label">Image</label>
					<input type="file" asp-for="ProductImages" class="form-control-file" multiple />
					<span asp-validation-for="ProductImages" class="text-danger"></span>
				</div>
				<br />
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
<br />
<div>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Bootstrap JavaScript (Optional if you need JS features) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
