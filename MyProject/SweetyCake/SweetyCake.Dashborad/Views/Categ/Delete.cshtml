@model OutbornE_commerce.BAL.Dto.Categories.CategoryDto

@{
    ViewData["Title"] = "Category Details";
}

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .category-detail-card {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: none;
            transition: all 0.3s ease;
        }

            .category-detail-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

        .detail-section {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(0, 0, 0, 0.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .detail-row {
            margin-bottom: 1.5rem;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

            .detail-row:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

        .detail-label {
            font-weight: 600;
            color: #495057;
            font-size: 1rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

            .detail-label i {
                margin-right: 0.5rem;
                color: #667eea;
            }

        .detail-value {
            font-size: 1.1rem;
            color: #212529;
            font-weight: 500;
        }

        .action-buttons {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 15px;
            padding: 2rem;
            border: 1px solid rgba(0, 0, 0, 0.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-edit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .btn-edit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .btn-back {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

            .btn-back:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
                color: white;
            }
    </style>
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header fade-in stagger-1">
        <h1 class="mb-2 fs-2 fw-bold">
            <i class="fas fa-info-circle me-2"></i>Category Details
        </h1>
        <p class="mb-0 opacity-75">Detailed information about the selected category</p>
    </div>

    <div class="row">
        <!-- Category Details Section -->
        <div class="col-lg-12">
            <div class="category-detail-card fade-in stagger-3">
                <div class="card-body p-0">
                    <div class="detail-section">
                        <h2 class="mb-4 text-primary fw-bold">
                            <i class="fas fa-tag me-2"></i>Category Information
                        </h2>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-font"></i>English Name
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.NameEn)</div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-language"></i>Arabic Name
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.NameAr)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons fade-in stagger-4">
                <h4 class="mb-3 text-primary fw-bold">
                    <i class="fas fa-cogs me-2"></i>Actions
                </h4>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-custom btn-edit">
                        <i class="fas fa-edit"></i>Edit Category
                    </a>
                    <a asp-action="Index" class="btn-custom btn-back">
                        <i class="fas fa-list"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
