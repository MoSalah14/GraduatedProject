@model OutbornE_commerce.BAL.Dto.Categories.CategoryDto
@{
    ViewData["Title"] = "Delete Category";
}

@section Styles {
    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .page-header {
            margin-bottom: 2rem;
            padding: 1.5rem 0;
        }

        .category-detail-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: none;
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .detail-section {
            padding: 2rem;
        }

        .warning-box {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border: 2px solid #ffc107;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .warning-icon {
            font-size: 3rem;
            color: #f39c12;
            margin-bottom: 1rem;
        }

        .detail-row {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #dee2e6;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 600;
            color: #495057;
            min-width: 150px;
            display: flex;
            align-items: center;
        }

            .detail-label i {
                margin-right: 0.5rem;
                color: #6c757d;
                width: 20px;
            }

        .detail-value {
            flex: 1;
            color: #212529;
            font-weight: 500;
        }

        .action-buttons {
            padding: 1.5rem 0;
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
                color: white;
            }

        .btn-back {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

            .btn-back:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
                color: white;
                text-decoration: none;
            }

        .fade-in {
            animation: fadeInUp 0.6s ease-out;
        }

        .stagger-1 {
            animation-delay: 0.1s;
        }

        .stagger-2 {
            animation-delay: 0.2s;
        }

        .stagger-3 {
            animation-delay: 0.3s;
        }

        .stagger-4 {
            animation-delay: 0.4s;
        }

     
    </style>
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header fade-in stagger-1">
        <h1 class="mb-2 fs-2 fw-bold">
            <i class="fas fa-trash-alt me-2"></i>Delete Category
        </h1>
        <p class="mb-0 opacity-75">Confirm category deletion</p>
    </div>

    <div class="row">
        <!-- Category Delete Section -->
        <div class="col-lg-12">
            <!-- Warning Box -->
            <div class="warning-box fade-in stagger-2">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h4 class="text-warning mb-2">⚠️ Warning!</h4>
                <p class="mb-0 text-dark">
                    <strong>Are you sure you want to delete this category?</strong><br>
                    This action cannot be undone and will permanently remove the category from your system.
                </p>
            </div>

            <div class="category-detail-card fade-in stagger-3">
                <div class="card-body p-0">
                    <div class="detail-section">
                        <h2 class="mb-4 text-primary fw-bold">
                            <i class="fas fa-tag me-2"></i>Category Information
                        </h2>
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-font"></i>English Name
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.NameEn)</div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-language"></i>Arabic Name
                            </div>
                            <div class="detail-value">@Html.DisplayFor(model => model.NameAr)</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons fade-in stagger-4">
                <h4 class="mb-3 text-primary fw-bold">
                    <i class="fas fa-cogs me-2"></i>Actions
                </h4>
                <div class="d-flex gap-3 flex-wrap">
                    <form asp-action="Delete" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn-custom btn-delete">
                            <i class="fas fa-trash"></i>Yes, Delete Category
                        </button>
                    </form>
                    <a asp-action="Index" class="btn-custom btn-back">
                        <i class="fas fa-list"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add click confirmation for extra safety
            $('form').on('submit', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this category? This action cannot be undone.')) {
                    e.preventDefault();
                    return false;
                }
            });

            // Initialize tooltips if needed
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}